<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Modeal theme -->
    <style name="ModealTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ModealActionBar</item> <!-- 액션바 스타일 -->
        <item name="actionBarSize">40dp</item> <!-- 액션바의 높이 -->
    </style>

    <!-- Modeal ActionbBar -->
    <style name="ModealActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/colorModeal</item> <!-- 액션바 색상 -->
    </style>

</resources>
